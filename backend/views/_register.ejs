<%- include header.ejs %>
    <form method="POST" id="register">
        <div id="table-border">
            <table align="center">
                <tr>
                    <td><label for="name">Name</label></td>
                    <td>
                        <input type="text" id="name" name="name" placeholder="vipin anand" />
                    </td>
                </tr>
                <tr>
                    <td><label for="name">Contact</label></td>
                    <td>
                        <input type="number" id="contact" name="contact" placeholder="+91987456123" />
                    </td>
                </tr>
                <tr>
                    <td><label for="name">email</label></td>
                    <td>
                        <input type="email" id="email" name="email" placeholder="abcd@xyz.com" />
                    </td>
                </tr>
                <tr>
                    <td><label for="name">Username</label></td>
                    <td>
                        <input type="text" id="username" name="username" placeholder="vipinanand" />
                    </td>
                </tr>
                <tr>
                    <td><label for="name">Password</label></td>
                    <td>
                        <input type="password" id="password" name="password" placeholder="*********" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" /></td>
                </tr>
            </table>
        </div>
    </form>